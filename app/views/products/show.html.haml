%p#notice= notice
%p#error= flash[:error]

%p
  %b Title:
  = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%p
  %b Category
  = link_to product.category.name, category

%h3 Reviews
- if current_user
  = render 'reviews/form'

= render reviews

- if current_user && current_user.is_product_owner?(product)
  = link_to 'Edit', edit_category_product_path(category.id, product.id)
  \|
= link_to 'Back', category_products_path, class: 'btn btn-primary'
