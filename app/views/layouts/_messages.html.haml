- flash.each do |name, msg|
  - if msg.is_a?(String)
    %div{ class: "alert alert-dismissible alert-#{ name == "notice" ? "success" : "warning" }", role: "alert" }
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      = content_tag :div, msg, id: "flash_message"
